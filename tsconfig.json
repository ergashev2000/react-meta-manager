{
  "compilerOptions": {
    "target": "es2017",   // Or "es2020", "es2021", etc.
    "module": "commonjs",
    "jsx": "react",       // Use "react-jsx" if using React 17+
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["es2017", "dom"]  // Ensure this includes "es2017" or later
  }
}
